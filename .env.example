# LearnSnap Environment Variables
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:pass@host:5432/db
NEON_DATABASE_URL=postgresql://user:pass@host:5432/db

# Redis (add Redis service in Railway)
REDIS_URL=redis://default:password@host:port
REDIS_PRIVATE_URL=redis://default:password@host:port

# AI Services
GEMINI_API_KEY=your-gemini-key
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# Authentication
SESSION_SECRET=your-session-secret-min-32-chars
DEVICE_TOKEN_SECRET=your-device-token-secret
ENCRYPTION_KEY=your-encryption-key-min-32-chars
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Payment (Paylink)
PAYLINK_API_ID=your-paylink-api-id
PAYLINK_SECRET_KEY=your-paylink-secret-key
PAYLINK_ENVIRONMENT=testing
PAYLINK_WEBHOOK_SECRET=your-paylink-webhook-secret

# Email
RESEND_API_KEY=your-resend-key
ADMIN_EMAIL=BasemAlmutairi1989@gmail.com

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://learnsnap.app

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Backup
BACKUP_DIR=./backups

# Feature Flags
ENABLE_CACHING=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_ENCRYPTION=true

# Admin Dashboard (v3.0)
ENABLE_ADMIN=false
ADMIN_PASSWORD=your-admin-password

# Enterprise Features (v3.0)
QUIZ_DAILY_LIMIT=60
DATA_RETENTION_DAYS=90
CSP_REPORT_ONLY=false
LEGACY_BEARER_AUTH=false
